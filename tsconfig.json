{
  "compilerOptions": {
    /* Core Settings */
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* Output & File Structure */
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,

    /* Source Maps & Declarations */
    "sourceMap": true,
    "declaration": true,

    /* Path Aliases */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
